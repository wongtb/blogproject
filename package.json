{
  "name": "blogproject",
  "version": "1.0.0",
  "description": "An web application for bloggers",
  "main": "index.js",
  "scripts": {
    "cover": "nyc --silent npm run test && npm run cover:report", 
    "cover:report": "nyc report --reporter=lcov --reporter=text",

    "test": "cross-env MONGODB_ENV=local NODE_ENV=test mocha --timeout=10000 --exit",

    "run-local": "cross-env MONGODB_ENV=local NODE_ENV=test node index",
    "run-prod": "cross-env MONGODB_ENV=docker NODE_ENV=prod node index"
  },
  "keywords": [
    "restful",
    "json",
    "blog"
  ],
  "author": "Brian Wong",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "mongoose": "^5.6.4",
    "cross-env": "^5.2.0",
    "dotenv": "8.0.0",
    "bcryptjs": "2.4.3",
    "jsonwebtoken": "9.0.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "istanbul": "^0.4.5",
    "mocha": "6.2.0",
    "nyc": "^14.1.1"
  }
}
